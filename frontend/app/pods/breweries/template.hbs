<h1>Breweries List</h1>

{{table-view data=breweries columns=userColumns}}

<h2>Add Brewery</h2>

<form class="form-horizontal" {{action 'addUser' on='submit'}}>
  {{#if userErrorsHash}}
    {{#each userErrorsHash as |error|}}
        <div>{{error.source.pointer}} {{error.details}}</div>
    {{/each}}
  {{/if}}

    <div class="form-group">
        <label class="col-sm-2 control-label">Email</label>
        <div class="col-sm-5">
          {{input value=newUser.email class="form-control" type='text' placeholder="Email"}}
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Password</label>
        <div class="col-sm-5">
          {{input value=newUser.password class="form-control" type='text' placeholder="Password"}}
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Name</label>
        <div class="col-sm-5">
          {{input value=newUser.name class="form-control" type='text' placeholder="Name"}}
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Phone Number</label>
        <div class="col-sm-5">
          {{input value=newUser.phoneNumber class="form-control" type='text' placeholder="Phone Number"}}
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Contact Address 1</label>
        <div class="col-sm-5">
          {{input value=newUser.contactAddress1 class="form-control" type='text' placeholder="Contact Address 1"}}
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Contact Address 2</label>
        <div class="col-sm-5">
          {{input value=newUser.contactAddress2 class="form-control" type='text' placeholder="Contact Address 2"}}
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Contact City</label>
        <div class="col-sm-5">
          {{input value=newUser.contactCity class="form-control" type='text' placeholder="Contact City"}}
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Contact State</label>
        <div class="col-sm-5">
          {{input value=newUser.contactState class="form-control" type='text' placeholder="Contact State"}}
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Contact Zip</label>
        <div class="col-sm-5">
          {{input value=newUser.contactZip class="form-control" type='text' placeholder="Contact Zip"}}
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-5">
          {{async-button tagName='button' action='addUser' type="submit" class="btn btn-default" default='Add User' pending='Adding..'}}
        </div>
    </div>
</form>